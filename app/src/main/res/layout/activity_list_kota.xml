<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rosinante24.discovermuseumapp.Activity.ListKotaActivity">

    <TextView
        android:id="@+id/textTitleListKota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/jarak10dp"
        android:layout_marginTop="@dimen/marginbetweentextandimagespalsh"
        android:gravity="center"
        android:text="@string/titleListKota"
        android:textSize="@dimen/textTitleMainActivity"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerListKota"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/jarak10dp"
        tools:listitem="@layout/item_list_main" />
</LinearLayout>
